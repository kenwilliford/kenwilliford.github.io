{
  "name": "Jekyll",
  "image": "mcr.microsoft.com/devcontainers/jekyll",
  // Only install packages not already in the base Jekyll image
  "features": {
    "ghcr.io/rocker-org/devcontainer-features/apt-packages:1": {
      "packages": "imagemagick,inotify-tools"
    }
  },
  // Install gems once when container is created
  "postCreateCommand": "bundle install",
  // Run Jekyll in background so container opens quickly
  "postStartCommand": "./bin/entry_point.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "sissel.shopify-liquid",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "editor.formatOnSave": true
      }
    }
  },
  "remoteUser": "vscode"
}